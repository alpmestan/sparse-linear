category:            Math
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
  exposed-modules:     Data.Proxy.PolyKind
                       Numeric.LinearAlgebra.Sparse
  -- other-modules:       
  hs-source-dirs:      src
  other-extensions:    DataKinds, FlexibleInstances, PolyKinds, TypeFamilies
  build-depends:       base,
                       lens ==4.1.*,
                       primitive ==0.5.*,
                       vector ==0.10.*,
                       vector-algorithms ==0.6.*
  default-language:    Haskell2010
  ghc-options: -Wall -rtsopts -O2
  ghc-prof-options: -fprof-auto

test-suite test-props
  type: exitcode-stdio-1.0
  main-is: test-props.hs
  other-modules:  Numeric.LinearAlgebra.Sparse.QuickCheck
  hs-source-dirs: tests
  default-language: Haskell2010
  ghc-options: -rtsopts -O2
  ghc-prof-options: -fprof-auto
  build-depends:  base,
                  lens ==4.1.*,
                  sparse-linear,
                  QuickCheck ==2.7.*,
                  tasty ==0.8.*,
                  tasty-quickcheck ==0.8.*,
                  vector

test-suite test-monoid
  type: exitcode-stdio-1.0
  main-is: test-monoid.hs
  other-modules:  Numeric.LinearAlgebra.Sparse.QuickCheck
  hs-source-dirs: tests
  default-language: Haskell2010
  ghc-options: -rtsopts -O2 -Wall
  ghc-prof-options: -fprof-auto -Wall
  build-depends:  base,
                  lens ==4.1.*,
                  sparse-linear,
                  QuickCheck ==2.7.*,
                  tasty ==0.8.*,
                  tasty-quickcheck ==0.8.*,
                  vector
